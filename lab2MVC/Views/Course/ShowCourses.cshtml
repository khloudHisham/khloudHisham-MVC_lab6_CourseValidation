@model List<lab2MVC.Models.Course>
@{
    Layout = "_AdvLayout";
}
<style>
    /* Style the table */
    table {
        width: 100%;
        border-collapse: collapse;
    }

    /* Style table headers */
    th {
        background-color: #f2f2f2;
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
    }

    /* Style table rows */
    tr:nth-child(even) {
        background-color: #f2f2f2;
    }


    /* Style table cells */
    td {
        border: 1px solid #ddd;
        padding: 8px;
    }
</style>
<h1> All Cources</h1>
<br/>

<br/>
<br/>
<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Degree</th>
            <th>MinDegree</th>
            <th>Department</th>
            <th>New Course</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.Id</td>
                <td>@course.Name</td>
                <td>@course.Degree</td>
                <td>@course.MinDegree</td>
                <td>@course.Department.Name</td> <!-- Assuming Department has a Name property -->
                <td><a href="@Url.Action("AddCourse", "Course")" class="btn btn-warning">New</a></td>
            </tr>
        }
    </tbody>
</table>
